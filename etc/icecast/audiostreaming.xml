<icecast>
    <location>Internet</location>
    <admin>admin support</admin>

    <limits>
        <clients>999</clients>
        <sources>2</sources>
        <queue-size>102400</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-size>65535</burst-size>
    </limits>

    <authentication>
        <source-password>hack_me</source-password>
        <admin-user>admin</admin-user>
        <admin-password>hack_me</admin-password>
    </authentication>
    
    <hostname>container-icecast-kh</hostname>

    <listen-socket>
        <port>8000</port>
        <bind-address>0.0.0.0</bind-address>
    </listen-socket>
    
    <mount>
        <mount-name>/audiostreaming</mount-name>
        <password>s3cr3t</password>
        <max-listeners>999</max-listeners>
        <bitrate>64</bitrate>
        <burst-size>65536</burst-size>
    </mount>

    <fileserve>1</fileserve>

    <paths>
        <basedir>/usr/share/icecast</basedir>
        <logdir>/var/log/icecast</logdir>
        <webroot>/usr/share/icecast/web</webroot>
        <adminroot>/usr/share/icecast/admin</adminroot>
        <alias source="/" dest="/index.html"/>
    </paths>

    <logging>
        <accesslog>access.log</accesslog>
        <errorlog>error.log</errorlog>
        <accesslog_ip>1</accesslog_ip>
        <playlistlog>playlist.log</playlistlog>
      	<loglevel>3</loglevel>
      	<logsize>5000</logsize>
        <logarchive>1</logarchive>
    </logging>

    <security>
        <chroot>0</chroot>
        <!-- <changeowner>
            <user>icecast</user>
            <group>icecast</group>
        </changeowner> -->
    </security>
</icecast>
